    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.12/signalr.min.js"></script>
    <script>
        (function(){
          const wrap  = document.querySelector('.notification-dropdown');
          if(!wrap) return;

          const elBellDot  = document.getElementById('notifDot');
          const elList     = document.getElementById('notifList');
          const btnRefresh = document.getElementById('btnRefreshNotif');

          // lấy config từ data-attr
          const apiBase = (wrap.dataset.api || '').replace(/\/+$/,''); // https://localhost:7004
          const bearer  = wrap.dataset.token || null;

          let userId = parseInt(wrap.dataset.userId || '', 10);
          if (Number.isNaN(userId)) userId = null;

          // Không ẩn chuông nếu chưa có userId; chỉ không gọi API/Hub
          init();

          async function init(){
            if(!apiBase){
              console.warn('Missing ApiBaseUrl on bell.');
              return;
            }
            if(!userId){
              elList.innerHTML = `<div class="p-3 text-muted small">Đăng nhập để xem thông báo.</div>`;
              return;
            }
            await loadNotifications();
            await startHub();
            btnRefresh?.addEventListener('click', e => { e.preventDefault(); loadNotifications(); });
          }

          async function loadNotifications(){
            try{
              const res = await fetch(`${apiBase}/api/Notifications/${userId}?take=20`, {
                headers: bearer ? { 'Authorization': `Bearer ${bearer}` } : {}
              });
              if(!res.ok) throw new Error('Load notifications failed');
              const data = await res.json();
              renderList(data);
              updateDot(data);
            }catch(e){
              elList.innerHTML = `<div class="p-3 text-danger small">Không tải được thông báo.</div>`;
              console.error(e);
            }
          }

          async function startHub(){
            const hub = new signalR.HubConnectionBuilder()
                      .withUrl(`${apiBase}/hubs/notifications`, { accessTokenFactory: () => bearer })

              .withAutomaticReconnect()
              .build();

            // debug trạng thái kết nối
            hub.onreconnecting(err => console.warn('hub reconnecting', err));
            hub.onreconnected(id => console.log('hub reconnected', id));
            hub.onclose(err => console.warn('hub closed', err));

            hub.on("ReceiveNotification", (n) => {
              if(!n) return;
              appendItem(n, true);
              elBellDot.classList.remove('d-none');
            });

            hub.on("NotificationMarkedRead", (id) => {
              const el = document.querySelector(`.notification-item[data-id="${id}"]`);
              if (el) el.classList.remove('unread');
              recalcDot(); // tính lại chấm đỏ dựa trên item .unread còn lại
            });
            hub.start().catch(console.error);
          }
             


          function updateDot(items){
            elBellDot.classList.toggle('d-none', !(items||[]).some(x => !x.isRead));
          }

          function renderList(items){
            if(!items || items.length === 0){
              elList.innerHTML = `<div class="p-3 text-muted small">Chưa có thông báo nào.</div>`;
              return;
            }
            elList.innerHTML = '';
            items.forEach(n => appendItem(n, false));
          }

          function appendItem(n, prepend){
            const a = document.createElement('a');
            a.className = `list-group-item list-group-item-action notification-item ${n.isRead ? '' : 'unread'}`;
            a.dataset.id  = n.notificationId;
            a.dataset.url = n.targetUrl || '';
            a.innerHTML = `
              <div class="p-2">
                <div class="notification-content">${escapeHtml(n.content)}</div>
                <div class="text-muted small mt-1">${formatDate(n.createdAt)}</div>
              </div>`;
            a.addEventListener('click', () => onClickItem(n));
            prepend ? elList.prepend(a) : elList.appendChild(a);
          }

          function onClickItem(n){
            // mark read (fire-and-forget)
            fetch(`${apiBase}/api/Notifications/${n.notificationId}/read?userId=${userId}`, {
              method:'PUT',
              headers: bearer ? { 'Authorization': `Bearer ${bearer}` } : {}
            }).catch(()=>{});
            if(n.targetUrl) window.location.href = n.targetUrl;
          }

          // helpers
          function formatDate(d){ try{ return new Date(d).toLocaleString(); }catch{ return ''; } }
          function escapeHtml(s){ return (s??'').replace(/[&<>"']/g, m => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m])); }
        })();
        
    </script>
    <script>
 (async function () {
    const wrap = document.querySelector('.notification-dropdown');
    if (!wrap) {
        console.warn("Notification dropdown element not found.");
        return;
    }

    const apiBase = (wrap.dataset.api || '').replace(/\/+$/, '');
    const bearer = wrap.dataset.token || null;
    if (!apiBase || !bearer) {
        console.warn("API base URL or token missing.");
        return;
    }

    const userAvatar = document.getElementById("userAvatar");
    if (!userAvatar) {
        console.warn("Avatar image element not found.");
        return;
    }

    try {
        const res = await fetch(`${apiBase}/api/User/profile`, {
            headers: { 'Authorization': `Bearer ${bearer}` }
        });
        if (!res.ok) throw new Error(`Failed to load profile: ${res.status}`);

        const profile = await res.json();
        console.log("Profile data:", profile);

        if (profile?.avatar) {
            console.log("Attempting to load avatar:", profile.avatar);
            userAvatar.src = profile.avatar;
            userAvatar.onerror = () => {
                console.warn("Failed to load avatar image, using default.");
                userAvatar.src = "/assets/images/default-avatar.png"; // Adjust path as needed
            };
        } else {
            console.log("No avatar URL, using default.");
            userAvatar.src = "/assets/images/default-avatar.png"; // Adjust path as needed
        }
    } catch (e) {
        console.warn("Error fetching profile:", e);
        userAvatar.src = "/assets/images/default-avatar.png"; // Adjust path as needed
    }
})();
    </script>

