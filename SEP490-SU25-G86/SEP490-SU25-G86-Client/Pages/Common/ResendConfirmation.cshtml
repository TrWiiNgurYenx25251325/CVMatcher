@page
@model SEP490_SU25_G86_Client.Pages.Common.ResendConfirmationModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gửi lại email xác thực tài khoản</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/register.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="right-section" style="width:100%;max-width:420px;margin:auto;">
            <div class="form-container">
                <h2 class="title">Gửi lại email xác thực tài khoản</h2>
                <p class="subtitle">Nhập email của bạn để nhận lại link xác thực tài khoản.</p>
                <form method="post" class="register-form">
                    <div class="input-group">
                        <input asp-for="Email" type="email" placeholder="Email" required autofocus>
                    </div>
                    <button type="submit" class="register-button" style="margin-top:10px;">Gửi lại email xác thực</button>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="text-danger" style="margin-top:10px">@Model.ErrorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="text-success" style="margin-top:10px">@Model.SuccessMessage</div>
                    }
                </form>
                <div style="margin-top:16px;">
                    <a href="/Common/Login">Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
