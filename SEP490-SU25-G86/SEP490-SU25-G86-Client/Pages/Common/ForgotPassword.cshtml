@page
@model SEP490_SU25_G86_Client.Pages.Common.ForgotPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên mật khẩu - CVMatcher</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <!-- Phần trái -->
        <div class="left-section">
            <img src="~/assets/images/LogoCVM.png" alt="CVMatcher" class="logo">
            <img src="~/assets/images/battay.png" alt="Handshake Illustration" class="handshake">
            <p class="message"></p>
        </div>
        <!-- Phần phải -->
        <div class="right-section">
            <a href="/Common/Homepage" class="homepage-link">
                <img src="~/assets/images/left-svg-hd-removebg-preview.png" alt="Chevron Left" class="chevron-icon">
                Homepage
            </a>
            <a href="/Common/register" class="register-link">Bạn chưa có tài khoản? <span>ĐĂNG KÝ</span></a>
            <div class="form-container">
                <h2 class="title">Quên mật khẩu</h2>
                <p class="subtitle">Nhập email để nhận hướng dẫn đặt lại mật khẩu</p>
                <form method="post" class="login-form">
                    <div class="input-group">
                        <img src="~/assets/images/email.svg" alt="Email Icon" class="input-icon">
                        <input asp-for="Email" type="email" placeholder="Email" required>
                    </div>
                    <button type="submit" class="login-button">Gửi hướng dẫn đặt lại mật khẩu</button>
                </form>
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div style="color:green; margin-top:10px">@Model.Message</div>
                }
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div style="color:red; margin-top:10px">@Model.ErrorMessage</div>
                }


                <div style="height: 20px;"></div> <a href="/Common/Login" class="forgot-password">Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</body>
</html>