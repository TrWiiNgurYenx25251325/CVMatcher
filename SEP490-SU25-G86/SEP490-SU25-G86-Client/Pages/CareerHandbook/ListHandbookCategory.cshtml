@page
@model SEP490_SU25_G86_Client.Pages.CareerHandbook.ListHandbookCategoryModel
@{
    ViewData["Title"] = "Danh sách danh mục cẩm nang";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Danh sách danh mục cẩm nang</h3>
        <div>
            <a asp-page="/CareerHandbook/ListCareerHandbook" class="btn btn-primary me-2">
                <i class="fas fa-arrow-left"></i> Quay lại Danh sách Cẩm nang
            </a>
            <a asp-page="/CareerHandbook/CreateHandbookCategory" class="btn btn-success">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model.Categories != null && Model.Categories.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Tên danh mục</th>
                    <th>Mô tả</th>
                    <th>Ngày tạo</th>
                    <th style="width:140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model.Categories)
                {
                    <tr>
                        <td>@cat.CategoryName</td>
                        <td>@cat.Description</td>
                        <td>@cat.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-page="/CareerHandbook/UpdateHandbookCategory" asp-route-id="@cat.CategoryId" class="btn btn-sm btn-primary">Sửa</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@cat.CategoryId" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                                <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Chưa có danh mục nào.</p>
    }
</div>
