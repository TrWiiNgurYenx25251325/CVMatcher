@page "{id:int}"
@model SEP490_SU25_G86_Client.Pages.CareerHandbook.UpdateHandbookCategoryModel
@{
    ViewData["Title"] = "Cập nhật danh mục cẩm nang";
}

<div class="container my-4">
    <h3>Cập nhật danh mục cẩm nang</h3>
    <form method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Category.CategoryName" class="form-label">Tên danh mục</label>
            <input asp-for="Category.CategoryName" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Category.Description" class="form-label">Mô tả</label>
            <input asp-for="Category.Description" class="form-control" />
        </div>

        <div class="col-12">
            <button class="btn btn-primary">Cập nhật</button>
            <a asp-page="/CareerHandbook/ListHandbookCategory" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
