@page
@model SEP490_SU25_G86_Client.Pages.Employer.ListJobCriteriaModel
@{
    ViewData["Title"] = "Chiến dịch tuyển dụng";
}
<link rel="stylesheet" href="~/css/Listjobcriteria.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-cv">
    <div class="cv-card d-flex justify-content-between align-items-center mb-4">
        <div>
        <h3 class="cv-title"><i class="bi bi-clipboard-data"></i> Danh sách chiến dịch tuyển dụng</h3>
        <h4>Danh sách những chiến dịch tuyển dụng của bạn</h4>
        </div>
    </div>
    <div class="cv-card">
        @if (Model.JobPosts == null || !Model.JobPosts.Any())
        {
            <div class="alert alert-info text-center mt-4">
                Bạn chưa có tin tuyển dụng nào.
            </div>
        }
        else
        {
            <div class="table-responsive-cv mt-3">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th>Tin tuyển dụng</th>
                            <th>Tiêu chí</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model.JobPosts)
                        {
                            var criteriaList = Model.CriteriaByJobPost.ContainsKey(job.JobPostId) ? Model.CriteriaByJobPost[job.JobPostId] : null;
                            <tr>
                                <td class="fw-semibold text-primary">@job.Title</td>
                                <td>
                                    @if (criteriaList != null && criteriaList.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var item in criteriaList)
                                            {
                                                <li class="mb-3 border rounded p-3">
                                                    <div class="fw-semibold fs-6 text-primary mb-1">@item.RequiredJobTitles</div>
                                                    <div class="row small">
                                                        <div class="col-md-6">
                                                            <p><strong>Kinh nghiệm:</strong> @item.RequiredExperience</p>
                                                            <p><strong>Kỹ năng:</strong> @item.RequiredSkills</p>
                                                            <p><strong>Học vấn:</strong> @item.EducationLevel</p>
                                                            <p><strong>Ngôn ngữ:</strong> @item.PreferredLanguages</p>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <p><strong>Mục tiêu:</strong> @Html.Raw(item.Summary ?? "")</p>
                                                            <p><strong>Chứng chỉ:</strong> @Html.Raw(item.PreferredCertifications ?? "")</p>
                                                            <p><strong>Lịch sử làm việc:</strong> @Html.Raw(item.WorkHistory ?? "")</p>
                                                            <p><strong>Dự án:</strong> @Html.Raw(item.Projects ?? "")</p>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có tiêu chí tuyển dụng cho tin này.</span>
                                    }
                                </td>
                                <td class="text-center align-middle">
                                    <div class="d-flex flex-column align-items-center gap-2">
                                        @if (criteriaList != null && criteriaList.Any())
                                        {
                                            @foreach (var item in criteriaList)
                                            {
                                                <div class="d-flex flex-row gap-2">
                                                    <a class="btn btn-sm btn-warning" href="/Employer/UpdateJobCriterion?id=@item.JobCriteriaId">
                                                        <i class="bi bi-pencil-square"></i> Sửa
                                                    </a>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <a class="btn btn-sm btn-primary" href="/Employer/AddJobCriteria?jobPostId=@job.JobPostId">
                                                <i class="bi bi-plus-circle"></i> Thêm tiêu chí
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Pagination" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                                <a class="page-link" href="@Url.Page(null, null, new {
                                    PageIndex = Model.PageIndex - 1,
                                    PageSize = Model.PageSize
                                }, null)">
                                    &laquo;
                                </a>
                            </li>
                            @for (int p = 1; p <= Model.TotalPages; p++)
                            {
                                <li class="page-item @(p == Model.PageIndex ? "active" : "")">
                                    <a class="page-link" href="@Url.Page(null, null, new {
                                        PageIndex = p,
                                        PageSize = Model.PageSize
                                    }, null)">@p</a>
                                </li>
                            }
                            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="@Url.Page(null, null, new {
                                    PageIndex = Model.PageIndex + 1,
                                    PageSize = Model.PageSize
                                }, null)">
                                    &raquo;
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <div class="text-center text-muted mt-1">
                        @{
                            var start = (Model.TotalRecords == 0) ? 0 : ((Model.PageIndex - 1) * Model.PageSize + 1);
                            var end = Math.Min(Model.PageIndex * Model.PageSize, Model.TotalRecords);
                        }
                        Hiển thị @start - @end trong tổng số @Model.TotalRecords chiến dịch tuyển dụng
                    </div>
                }
            </div>
        }
    </div>
</div>
