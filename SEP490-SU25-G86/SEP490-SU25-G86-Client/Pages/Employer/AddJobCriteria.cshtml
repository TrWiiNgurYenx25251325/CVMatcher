@page
@model SEP490_SU25_G86_Client.Pages.Employer.AddJobCriteriaModel
@{
    ViewData["Title"] = "Thêm tiêu chí tuyển dụng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jobcriteria-form.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-card p-4 shadow rounded-4 bg-white">
                    <div>
                    <h2 class="text-center mb-4 text-primary">
                        Thêm tiêu chí tuyển dụng cho <span class="fw-bold">@Model.JobPostTitle</span>
                    </h2>
						<p class="text-center text-muted mb-4">Vui lòng điền đầy đủ thông tin bên dưới để thêm tiêu chí tuyển dụng cho tin tuyển dụng của bạn.</p>
					</div>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Html.Raw(Model.ErrorMessage)
                        </div>
                    }

                    <form method="post" class="jobcriteria-form">
                        <input type="hidden" asp-for="Input.JobPostId" />
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Kinh nghiệm yêu cầu</label>
                                <input asp-for="Input.RequiredExperience" class="form-control" />
                                <span asp-validation-for="Input.RequiredExperience" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Kỹ năng yêu cầu</label>
                                <input asp-for="Input.RequiredSkills" class="form-control" />
                                <span asp-validation-for="Input.RequiredSkills" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Trình độ học vấn</label>
                                <input asp-for="Input.EducationLevel" class="form-control" maxlength="100" />
                                <span asp-validation-for="Input.EducationLevel" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Vị trí công việc yêu cầu</label>
                                <input asp-for="Input.RequiredJobTitles" class="form-control" />
                                <span asp-validation-for="Input.RequiredJobTitles" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Ngôn ngữ ưu tiên</label>
                                <input asp-for="Input.PreferredLanguages" class="form-control" />
                                <span asp-validation-for="Input.PreferredLanguages" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Địa chỉ</label>
                                <input asp-for="Input.Address" class="form-control" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Chứng chỉ ưu tiên</label>
                                <textarea asp-for="Input.PreferredCertifications" class="form-control tinymce" rows="3"
                                          placeholder="Nhập chứng chỉ ưu tiên"></textarea>
                                <span asp-validation-for="Input.PreferredCertifications" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Tóm tắt</label>
                                <textarea asp-for="Input.Summary" class="form-control tinymce" rows="3"
                                          placeholder="Viết tóm tắt ngắn (tuỳ chọn)"></textarea>
                                <span asp-validation-for="Input.Summary" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Lịch sử công việc</label>
                                <textarea asp-for="Input.WorkHistory" class="form-control tinymce" rows="4"
                                          placeholder="Liệt kê kinh nghiệm, dự án..."></textarea>
                                <span asp-validation-for="Input.WorkHistory" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Dự án</label>
                                <textarea asp-for="Input.Projects" class="form-control tinymce" rows="3"
                                          placeholder="Nhập các dự án liên quan"></textarea>
                                <span asp-validation-for="Input.Projects" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                + Thêm tiêu chí
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="https://cdn.tiny.cloud/1/pn5ixbd7bpt9y62aygbqvcsxc1g4ih5dbq5e4ifdigp35f2z/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
              selector:'textarea.tinymce',
              height:300,
              menubar:false,
              statusbar:false,
              promotion:false,
              branding:false,
              plugins:'lists link autoresize',
              toolbar:'undo redo | bold italic underline | bullist numlist | link removeformat',
            });
            document.querySelector('form')?.addEventListener('submit', ()=>tinymce.triggerSave());
        </script>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
