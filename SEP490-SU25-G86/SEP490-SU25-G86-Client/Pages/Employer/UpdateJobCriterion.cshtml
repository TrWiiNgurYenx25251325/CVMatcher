@page
@model SEP490_SU25_G86_Client.Pages.Employer.UpdateJobCriterionModel
@{
    ViewData["Title"] = "Cập nhật tiêu chí tuyển dụng";
}
<link rel="stylesheet" href="~/css/jobcriteria-form.css">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card p-4 shadow rounded-4 bg-white">
                <h2 class="text-center mb-4 text-primary">Cập nhật tiêu chí tuyển dụng</h2>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }
                <form method="post" class="jobcriteria-form">
                    <input type="hidden" asp-for="Input.JobCriteriaId" />
                    <input type="hidden" asp-for="Input.JobPostId" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.RequiredExperience" class="form-label">Kinh nghiệm yêu cầu</label>
                            <input asp-for="Input.RequiredExperience" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.RequiredSkills" class="form-label">Kỹ năng yêu cầu</label>
                            <input asp-for="Input.RequiredSkills" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.EducationLevel" class="form-label">Trình độ học vấn</label>
                            <input asp-for="Input.EducationLevel" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.RequiredJobTitles" class="form-label">Vị trí công việc yêu cầu</label>
                            <input asp-for="Input.RequiredJobTitles" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.PreferredLanguages" class="form-label">Ngôn ngữ ưu tiên</label>
                            <input asp-for="Input.PreferredLanguages" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Address" class="form-label">Địa chỉ làm việc</label>
                            <input asp-for="Input.Address" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.PreferredCertifications" class="form-label">Chứng chỉ ưu tiên</label>
                            <textarea asp-for="Input.PreferredCertifications" class="form-control tinymce" rows="3"></textarea>
                            <span asp-validation-for="Input.PreferredCertifications" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.Summary" class="form-label">Tóm tắt</label>
                            <textarea asp-for="Input.Summary" class="form-control tinymce" rows="3"></textarea>
                            <span asp-validation-for="Input.Summary" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.WorkHistory" class="form-label">Lịch sử công việc</label>
                            <textarea asp-for="Input.WorkHistory" class="form-control tinymce" rows="4"></textarea>
                            <span asp-validation-for="Input.WorkHistory" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.Projects" class="form-label">Dự án</label>
                            <textarea asp-for="Input.Projects" class="form-control tinymce" rows="3"></textarea>
                            <span asp-validation-for="Input.Projects" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-primary px-5">Cập nhật</button>
                        <a asp-page="/Employer/ListJobCriteria" class="btn btn-secondary ms-2">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/pn5ixbd7bpt9y62aygbqvcsxc1g4ih5dbq5e4ifdigp35f2z/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
          selector:'textarea.tinymce',
          height:300,
          menubar:false,
          statusbar:false,
          promotion:false,
          branding:false,
          plugins:'lists link autoresize',
          toolbar:'undo redo | bold italic underline | bullist numlist | link removeformat',
        });
        document.querySelector('form')?.addEventListener('submit', ()=>tinymce.triggerSave());
    </script>
}