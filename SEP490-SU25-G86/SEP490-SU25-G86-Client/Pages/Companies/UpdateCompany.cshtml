@page
@model SEP490_SU25_G86_Client.Pages.Companies.UpdateCompanyModel
@{
    ViewData["Title"] = "Cập nhật công ty";
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">Cập nhật thông tin công ty</h4>
                    <a asp-page="/Companies/CompanyInformation" class="btn btn-outline-light btn-sm">Quay lại</a>
                </div>

                <div class="card-body p-4">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form method="post" enctype="multipart/form-data" class="row g-4">
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted mb-3">Thông tin chung</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Company.CompanyName" class="form-label fw-semibold">Tên công ty</label>
                                    <input asp-for="Company.CompanyName" class="form-control" placeholder="VD: Công ty ABC" />
                                    <span asp-validation-for="Company.CompanyName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Company.IndustryId" class="form-label fw-semibold">Ngành nghề</label>
                                    <select asp-for="Company.IndustryId" class="form-select" asp-items="Model.IndustrySelectList">
                                        <option value="">-- Chọn ngành nghề --</option>
                                    </select>
                                    <span asp-validation-for="Company.IndustryId" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Company.CompanySize" class="form-label fw-semibold">Quy mô công ty</label>
                                    <input asp-for="Company.CompanySize" class="form-control" placeholder="VD: 50-100 nhân sự" />
                                    <span asp-validation-for="Company.CompanySize" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Company.TaxCode" class="form-label fw-semibold">Mã số thuế</label>
                                    <input asp-for="Company.TaxCode" class="form-control" placeholder="VD: 0312xxxxxx" />
                                    <span asp-validation-for="Company.TaxCode" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <h6 class="text-uppercase text-muted mb-3">Liên hệ</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Company.Email" class="form-label fw-semibold">Email</label>
                                    <input asp-for="Company.Email" class="form-control" placeholder="email@company.com" />
                                    <span asp-validation-for="Company.Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Company.Phone" class="form-label fw-semibold">Số điện thoại</label>
                                    <input asp-for="Company.Phone" class="form-control" placeholder="VD: 0901 234 567" />
                                    <span asp-validation-for="Company.Phone" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Company.Address" class="form-label fw-semibold">Địa chỉ</label>
                                    <input asp-for="Company.Address" class="form-control" placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành" />
                                    <span asp-validation-for="Company.Address" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Company.Website" class="form-label fw-semibold">Website</label>
                                    <input asp-for="Company.Website" class="form-control" placeholder="https://example.com" />
                                    <span class="form-text">Nên bao gồm giao thức http/https.</span>
                                    <span asp-validation-for="Company.Website" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <h6 class="text-uppercase text-muted mb-3">Giới thiệu</h6>
                            <label asp-for="Company.Description" class="form-label fw-semibold">Mô tả</label>
                            <textarea asp-for="Company.Description" class="form-control" rows="5" placeholder="Giới thiệu ngắn gọn về công ty, lĩnh vực, văn hóa, phúc lợi..."></textarea>
                            <span asp-validation-for="Company.Description" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <h6 class="text-uppercase text-muted mb-3">Logo</h6>
                            <div class="row g-3 align-items-center">
                                <div class="col-md-4 text-center">
                                    @if (!string.IsNullOrWhiteSpace(Model.Company.LogoUrl))
                                    {
                                        <img src="@Model.Company.LogoUrl" alt="Logo hiện tại" class="img-fluid rounded border bg-white" style="max-height: 140px; object-fit: contain;" />
                                    }
                                    else
                                    {
                                        <div class="text-muted">Chưa có logo hiện tại</div>
                                    }
                                </div>
                                <div class="col-md-8">
                                    <label asp-for="Company.LogoFile" class="form-label fw-semibold">Tải logo mới</label>
                                    <input asp-for="Company.LogoFile" type="file" class="form-control" accept="image/*" />
                                    <span class="form-text">Hỗ trợ định dạng JPG, PNG, SVG. Kích thước đề xuất 256x256px.</span>
                                    <span asp-validation-for="Company.LogoFile" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 d-flex justify-content-end pt-3 border-top mt-2">
                            <button type="submit" class="btn btn-success me-2">Lưu thay đổi</button>
                            <a asp-page="/Companies/CompanyInformation" class="btn btn-outline-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var input = document.getElementById('Company_LogoFile');
            if (!input) return;
            var allowed = ['image/jpeg', 'image/png', 'image/svg+xml'];
            input.addEventListener('change', function () {
                var file = this.files && this.files[0];
                if (!file) return;
                if (allowed.indexOf(file.type) === -1) {
                    this.value = '';
                    var span = document.querySelector('[data-valmsg-for="Company.LogoFile"]');
                    if (span) {
                        span.classList.add('text-danger');
                        span.textContent = 'Chỉ cho phép tải ảnh (JPG, PNG, SVG).';
                    }
                    alert('Chỉ cho phép tải ảnh (JPG, PNG, SVG).');
                }
            });
        })();
    </script>
}
